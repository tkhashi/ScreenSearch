<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:overlay="clr-namespace:ScreenSearch.UI.Overlay"
        x:Class="ScreenSearch.UI.MainWindow"
        Width="600"
        Height="320"
        Title="ScreenSearch">
  <DockPanel>
    <Border DockPanel.Dock="Bottom" Padding="8">
      <TextBlock x:Name="HotKeyStatusText" Text="HotKey待機中: Cmd+Shift+M" />
    </Border>
    <overlay:OverlayView x:Name="OverlayControl" IsVisible="False" />
  </DockPanel>
</Window>
